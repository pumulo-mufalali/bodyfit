{
  "name": "myfitness",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "build:web": "turbo run build --filter=@myfitness/web",
    "deploy": "pnpm build:web && firebase deploy --only hosting",
    "deploy:debug": "pnpm build:web && firebase deploy --only hosting --debug"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.6.2"
  }
}
